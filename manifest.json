{
    "manifest_version": 3,
    "name": "No Scroll Extension",
    "version": "1.0",
    "description": "An extension to stop all scrolling on any webpage.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  